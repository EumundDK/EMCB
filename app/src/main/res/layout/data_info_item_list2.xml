<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white"
        android:layout_margin="4dp"
        android:clickable="false"
        app:cardCornerRadius="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp">

            <TextView
                android:id="@+id/itemNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

<!--            <TextView-->
<!--                android:id="@+id/readerExtra"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="(X)"-->
<!--                android:textSize="14sp"-->
<!--                app:layout_constraintStart_toEndOf="@id/itemNameTextView"-->
<!--                app:layout_constraintTop_toTopOf="parent"/>-->

            <ImageView
                android:id="@+id/itemStatusOnOff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_circle_grey_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/itemNameTextView"/>

            <TextView
                android:id="@+id/itemCurrentTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="99.9"
                android:textSize="28sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/itemStatusOnOff"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/currentSymbolTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A"
                android:textSize="28sp"
                app:layout_constraintStart_toEndOf="@id/itemCurrentTextView"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/currentSettingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Setting :"
                android:textSize="10sp"
                app:layout_constraintStart_toEndOf="@id/currentSymbolTextView"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/currentSettingExtra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.0"
                android:textSize="10sp"
                app:layout_constraintStart_toEndOf="@id/currentSettingText"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/onOffSettingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="On/Off Setting :"
                android:textSize="10sp"
                app:layout_constraintStart_toEndOf="@id/currentSettingExtra"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/onOffSettingExtra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="10sp"
                app:layout_constraintStart_toEndOf="@id/onOffSettingText"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/cutOffPeriodText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cut-off Period :"
                android:textSize="10sp"
                app:layout_constraintStart_toEndOf="@id/currentSymbolTextView"
                app:layout_constraintTop_toBottomOf="@id/currentSettingText"/>

            <TextView
                android:id="@+id/cutOffPeriodExtra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:textSize="10sp"
                app:layout_constraintStart_toEndOf="@id/cutOffPeriodText"
                app:layout_constraintTop_toBottomOf="@id/currentSettingText"/>

            <TextView
                android:id="@+id/autoReconnectText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Auto Reconnect :"
                android:textSize="10sp"
                app:layout_constraintStart_toEndOf="@+id/currentSettingExtra"
                app:layout_constraintTop_toBottomOf="@id/onOffSettingText"/>

            <TextView
                android:id="@+id/autoReconnectExtra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="10sp"
                app:layout_constraintStart_toEndOf="@id/autoReconnectText"
                app:layout_constraintTop_toBottomOf="@+id/onOffSettingExtra"/>

            <ImageButton
                android:id="@+id/onOffButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/bright_grey"
                android:src="@drawable/ic_baseline_power_settings_new_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/ownerNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Owner Name :"
                android:textSize="10sp"
                app:layout_constraintStart_toEndOf="@id/currentSymbolTextView"
                app:layout_constraintTop_toBottomOf="@id/cutOffPeriodText"
                 />

            <TextView
                android:id="@+id/ownerNameExtra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DengKai"
                android:textSize="10sp"
                app:layout_constraintStart_toEndOf="@+id/ownerNameText"
                app:layout_constraintTop_toBottomOf="@id/autoReconnectText"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>


